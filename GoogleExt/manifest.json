
{
  "manifest_version": 3,
  "name": "Usagi summon",
  "version": "1.0",
  "description": "More and more usagis !!",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["https://www.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
        "resources": [
          "icons/sharingan.png",
          "icons/stop-button.png",
          "icons/start-button.png",
          "icons/usagi/shime34.png",
          "icons/usagi/shime35.png",
          "icons/logo16.ico"
        ],
        "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/logo48.png"
    }
  }
}
